<h1>Listing trips</h1>

<table>
  <tr>
    <th>Primary photo</th>
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Width</th>
    <th>Height</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.image_url %></td>
    <td><%= trip.title %></td>
    <td><%= trip.description %></td>
    <td><%= trip.location %></td>
    <td><%= trip.width %></td>
    <td><%= trip.height %></td>    
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

